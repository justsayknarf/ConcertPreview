<% include ./partials/header %>
<div class="container">
    <header class="header">
        <h1>Current calendar at the Independent</h1>
    </header>
    
    <%= username %>
    <div class="wrapper">
        <div id="left">
            <h3>Shows coming up:</h3>
            <ul>
                <% if (artists.length > 0) { %>
                <% artists.forEach(function(artist){  %>
                <li class="artist-name">
                    <span id="artistName"><%= artist %></span>
                    <span id="date"><%= artists[artist].date %></span>
                </li>
                <% }); %>
                <% } %>
            </ul>
            
        </div>
        <div id="results">
        </div>
        
    </div>
</div>

    <script id="results-template" type="text/x-handlebars-template">
        {{#each albums.items}}
        <div style="background-image:url({{images.0.url}})" data-album-id="{{id}}" class="cover"></div>
        {{/each}}
    </script>

<% include ./partials/footer %>